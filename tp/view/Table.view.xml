								</customData>
							</Text>
						</VBox>
						<Text text="{department_text}({department_id})"/>
						<Text text="{cost_center_text}({cost_center_id})"/>
						<Text text="{location_text}({location_id})"/>
						<Text text="{incumbent_text}({incumbent_id})"/>
						<Text text="{status}"/>
						<HBox>
